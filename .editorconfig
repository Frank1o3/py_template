# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------
# Python
# -----------------
[*.py]
indent_size = 4
max_line_length = 100
indent_style = tab

# -----------------
# Tests (optional clarity)
# -----------------
[tests/**/*.py]
indent_size = 4
indent_style = tab

# -----------------
# Markdown
# -----------------
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# -----------------
# JSON / YAML / TOML
# -----------------
[*.{json,yml,yaml,toml}]
indent_size = 2

# -----------------
# Shell scripts
# -----------------
[*.sh]
indent_size = 2

# -----------------
# Makefile (tabs are required)
# -----------------
[Makefile]
indent_style = tab
